<h1>Hello, Blog App User!</h1>
<%= link_to 'My Blog', { controller: 'articles' }, class: "button" %>

<p>
    <% if current_user %>
        Logged in as <%= current_user.name %>
        <%= link_to "Log Out", logout_path, class: "button" %>
    <% else %>
        <%= link_to "Sign Up", signup_path, class: "button" %> or
        <%= link_to "Log In", login_path, class: "button" %>
    <% end %>
</p>